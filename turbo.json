{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.base.json", ".eslintrc.cjs", "package.json"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "generate": {
      "dependsOn": ["^build"],
      "outputs": ["src/gen/**"]
    },
    "test": {
      "dependsOn": ["generate"],
      "cache": false
    },
    "format": {},
    "license-header": {
      "dependsOn": ["generate"]
    },
    "lint": {
      "dependsOn": ["format", "^build"]
    }
  }
}
